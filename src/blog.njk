---
layout: base.njk
title: Блог
---

<style>
    /* СЕТКА (GRID) */
    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 40px;
        margin-top: 40px;
    }

    /* КАРТОЧКА ПОСТА */
    .blog-card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .blog-card:hover {
        transform: translateY(-7px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        border-color: var(--accent-color);
    }
    
    /* Скрытая карточка (для фильтра) */
    .blog-card.hidden {
        display: none;
    }

    /* ОБЛОЖКА */
    .card-image-wrapper {
        height: 220px;
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .blog-card:hover .card-image { transform: scale(1.05); }

    /* КОНТЕНТ */
    .card-content {
        padding: 25px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card-date {
        font-size: 0.85rem;
        color: var(--accent-color);
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 10px;
        letter-spacing: 1px;
        display: flex; justify-content: space-between;
    }

    .card-title {
        font-family: 'Merriweather', serif;
        font-size: 1.3rem;
        margin: 0 0 15px 0;
        line-height: 1.4;
        color: var(--text-color);
    }

    .card-title a { text-decoration: none; color: inherit; }

    .read-more {
        margin-top: auto;
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--secondary-text);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .blog-card:hover .read-more { color: var(--accent-color); }

    /* --- СТИЛИ ФИЛЬТРОВ --- */
    .filter-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 40px;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: transparent;
        border: 1px solid var(--border-color);
        color: var(--secondary-text);
        padding: 8px 20px;
        border-radius: 20px;
        cursor: pointer;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .filter-btn:hover, .filter-btn.active {
        background-color: var(--accent-color);
        color: white;
        border-color: var(--accent-color);
    }
</style>

<div style="max-width: 1200px; margin: 40px auto; padding: 0 20px;">
    
    <div style="text-align: center; margin-bottom: 40px;">
        <h1 style="font-size: 3rem; margin-bottom: 10px;">
            <span class="lang-content-ru">Блог</span>
            <span class="lang-content-en" style="display:none">Blog</span>
        </h1>
        <p style="color: var(--secondary-text); font-size: 1.1rem;">
            <span class="lang-content-ru">Истории, мысли и новости из других миров</span>
            <span class="lang-content-en" style="display:none">Stories, thoughts and news from other worlds</span>
        </p>
    </div>

    <div class="filter-container">
        <button class="filter-btn active" onclick="filterSelection('all')">
            <span class="lang-content-ru">Все</span>
            <span class="lang-content-en" style="display:none">All</span>
        </button>
        <button class="filter-btn" onclick="filterSelection('stories')">
            <span class="lang-content-ru">Истории</span>
            <span class="lang-content-en" style="display:none">Stories</span>
        </button>
        <button class="filter-btn" onclick="filterSelection('news')">
            <span class="lang-content-ru">Новости</span>
            <span class="lang-content-en" style="display:none">News</span>
        </button>
        <button class="filter-btn" onclick="filterSelection('lore')">
            <span class="lang-content-ru">Мир</span>
            <span class="lang-content-en" style="display:none">Lore</span>
        </button>
    </div>

    <div class="blog-grid" id="blogGrid">
        {% for post in collections.blog | reverse %}
        <article class="blog-card" data-category="{{ post.data.category }}">
            
            <a href="{{ post.url }}" class="card-image-wrapper">
                {% if post.data.image %}
                    <img src="{{ post.data.image }}" alt="" class="card-image">
                {% else %}
                    <div style="width:100%; height:100%; background: #eee; display:flex; align-items:center; justify-content:center; color:#ccc;">
                        <i class="fa-solid fa-pen-nib" style="font-size: 3rem;"></i>
                    </div>
                {% endif %}
            </a>

            <div class="card-content">
                <div class="card-date">
                    <span>{{ post.date | date("dd.MM.yyyy") }}</span>
                    <span style="opacity: 0.6; font-size: 0.7rem;">{{ post.data.category }}</span>
                </div>

                <div class="lang-content-ru">
                    <h2 class="card-title">
                        <a href="{{ post.url }}">{{ post.data.title_ru if post.data.title_ru else post.data.title }}</a>
                    </h2>
                    <a href="{{ post.url }}" class="read-more">Читать далее <i class="fa-solid fa-arrow-right-long"></i></a>
                </div>

                <div class="lang-content-en" style="display:none">
                    <h2 class="card-title">
                        <a href="{{ post.url }}">{{ post.data.title_en if post.data.title_en else post.data.title }}</a>
                    </h2>
                    <a href="{{ post.url }}" class="read-more">Read more <i class="fa-solid fa-arrow-right-long"></i></a>
                </div>
            </div>
        </article>
        {% else %}
            <p style="text-align: center; grid-column: 1/-1;">Постов пока нет.</p>
        {% endfor %}
    </div>

</div>

<script>
    function filterSelection(category) {
        var cards = document.getElementsByClassName("blog-card");
        if (category == "all") category = "";
        
        // Показываем/скрываем карточки
        for (var i = 0; i < cards.length; i++) {
            cards[i].classList.remove("hidden");
            // Если категория не совпадает и это не "все" - скрываем
            if (cards[i].getAttribute("data-category") !== category && category !== "") {
                cards[i].classList.add("hidden");
            }
        }

        // Меняем активную кнопку
        var btns = document.getElementsByClassName("filter-btn");
        for (var i = 0; i < btns.length; i++) {
            btns[i].classList.remove("active");
            // Проверяем, на какую кнопку нажали (по тексту внутри onclick)
            if (btns[i].getAttribute("onclick").includes("'" + (category || 'all') + "'")) {
                btns[i].classList.add("active");
            }
        }
    }
</script>