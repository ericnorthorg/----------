---
layout: base.njk
---

<article style="max-width: 740px; margin: 40px auto; padding: 0 20px; font-size: 1.1rem; line-height: 1.8;">
    
    {% if image %}
        <img src="{{ image }}" style="width: 100%; height: auto; border-radius: 4px; margin-bottom: 30px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
    {% endif %}
    {% if cover %}
        <img src="{{ cover }}" style="max-width: 300px; display: block; margin: 0 auto 30px auto; border-radius: 4px; box-shadow: 0 5px 15px rgba(0,0,0,0.2);">
    {% endif %}

    <h1 style="font-family: 'Merriweather', serif; font-size: 2.5rem; line-height: 1.2; margin-bottom: 10px; text-align: center;">
        {{ title }}
    </h1>

    {% if date %}
    <div style="text-align: center; color: var(--secondary-text); font-size: 0.9rem; margin-bottom: 40px;">
        {{ date | date("d MMMM yyyy") }}
    </div>
    {% endif %}

    <div class="post-content">
        {{ content | safe }}
    </div>

    <div style="margin-top: 50px; border-top: 1px solid var(--border-color); padding-top: 20px; text-align: center;">
        <a href="javascript:history.back()" style="color: var(--accent-color); font-weight: 600;">← Назад</a>
    </div>

</article>